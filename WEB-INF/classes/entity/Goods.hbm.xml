<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    	<class name="entity.Goods" table="t_goods">
    		<id name="gid" length="20">
    			<generator class="uuid"></generator>
    		</id>
    		<property name="gname" length="255" ></property>
    		<property name="gstock" length="5"></property>
    		<property name="gprice" ></property>
    		<property name="gtopcategory" ></property>
    		<property name="gtype" length="1"></property>
    		<property name="gdescription" length="255"></property>
    		<property name="gpicturepath" length="255"></property>
    		<property name="gmanufacturer" length="255"></property>
    		<property name="gmodel" length="50"></property>
    		<property name="gproducedate" length="50"></property>
    		<property name="gguaranteedate" length="50"></property>
    		<property name="gstate" length="1"></property>
    	</class>
    </hibernate-mapping>